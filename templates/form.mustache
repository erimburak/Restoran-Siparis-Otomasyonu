<h2 class="title is-3">{{formBaslik}}</h2>

<form action="mustache.php?action=kaydet" method="post">
    {{#urun}}
        <input type="hidden" name="id" value="{{id}}">
    {{/urun}}

    <div class="field">
        <label class="label">Ürün Adı</label>
        <div class="control">
            <input class="input" type="text" name="ad" value="{{#urun}}{{ad}}{{/urun}}" required>
        </div>
    </div>

    <div class="field">
        <label class="label">Stok Adedi</label>
        <div class="control">
            <input class="input" type="number" name="stok" value="{{#urun}}{{stok}}{{/urun}}" required>
        </div>
    </div>

    <div class="field">
        <label class="label">Fiyat (TL)</label>
        <div class="control">
            <input class="input" type="text" name="fiyat" value="{{#urun}}{{fiyat}}{{/urun}}" required>
        </div>
    </div>

    <div class="field is-grouped">
        <div class="control">
            <button class="button is-link">Kaydet</button>
        </div>
        <div class="control">
            <a href="mustache.php" class="button is-link is-light">İptal</a>
        </div>
    </div>
</form>